{
  "name": "boombox-design-system",
  "version": "1.0.0",
  "description": "A comprehensive design system for modern web applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:tokens": "turbo run build --filter=@boombox/tokens",
    "build:components": "turbo run build --filter=@boombox/components",
    "build-storybook": "storybook build",
    "dev": "turbo run dev",
    "dev:storybook": "storybook dev -p 6006",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --coverage --watchAll=false",
    "test:watch": "turbo run test -- --watch",
    "test:a11y": "turbo run test:a11y",
    "clean": "turbo run clean",
    "reset": "npm run clean && npm install",
    "tokens:build": "turbo run tokens:build",
    "tokens:sync": "node tools/scripts/sync-figma-tokens.js",
    "email:build": "turbo run email:build",
    "email:preview": "turbo run email:preview",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@nrwl/workspace": "^16.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/core": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/builder-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "chromatic": "^7.6.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^13.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-storybook": "^0.6.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lerna": "^7.0.0",
    "nx": "^16.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.0.0",
    "prop-types": "^15.8.1",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.3.6",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hemingto/boombox-design-system.git"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "typescript",
    "storybook",
    "tailwind",
    "next.js"
  ],
  "license": "MIT"
}
