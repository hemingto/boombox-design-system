{
  "name": "boombox-design-system",
  "version": "1.0.0",
  "description": "A comprehensive design system for modern web applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "echo 'Build step placeholder'",
    "build-storybook": "cd apps/storybook && npm run build-storybook",
    "dev": "lerna run dev --parallel",
    "lint": "echo 'Lint placeholder'",
    "lint:check": "echo 'Lint check placeholder'",
    "type-check": "echo 'Type check placeholder'",
    "test": "echo 'Test placeholder'",
    "test:ci": "echo 'Test CI placeholder'",
    "test:watch": "jest --watch",
    "test:a11y": "echo 'A11y test placeholder'",
    "clean": "lerna run clean && lerna clean --yes",
    "reset": "npm run clean && npm install",
    "version:patch": "lerna version patch --yes",
    "version:minor": "lerna version minor --yes",
    "version:major": "lerna version major --yes",
    "version:prerelease": "lerna version prerelease --yes",
    "publish:packages": "lerna publish from-package --yes",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "storybook": "cd apps/storybook && npm run storybook",
    "storybook:build": "cd apps/storybook && npm run build-storybook"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chromatic": "^7.6.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lerna": "^7.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hemingto/boombox-design-system.git"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "typescript",
    "storybook"
  ],
  "license": "MIT"
}
